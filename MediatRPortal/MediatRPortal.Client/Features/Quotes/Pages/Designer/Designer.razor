@page "/designer"
@using MediatR
@using MediatRPortal.Client.Features.Quotes.Pages.Designer.CQRS.Commands
@using MediatRPortal.Client.Features.Quotes.Pages.Designer.Components.Charges.CQRS.Notifications
@using MediatRPortal.Client.Features.Quotes.Pages.Designer.Components.Routes.CQRS.Notifications

@inherits DesignerComponentBase

<PageTitle>Designer</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Designer <MudText Typo="Typo.caption">(id: @ComponentId)</MudText></MudText>
<MudText Typo="Typo.h6">@Designer.Routes.Count Routes</MudText>
<MudText Typo="Typo.h6">@Designer.Charges.Count Charges</MudText>

<MudSwitch @bind-Value="Designer.HasCargoDetails" @bind-Value:after="SetHasDetails" Label="Has details" />

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="pa-3">
            <MediatRPortal.Client.Features.Quotes.Pages.Designer.Components.Routes.Routes Designer="Designer" />
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Class="pa-3">
            <MediatRPortal.Client.Features.Quotes.Pages.Designer.Components.Charges.ChargeTabs Designer="Designer" />
        </MudPaper>
    </MudItem>
</MudGrid>
