@page "/"

@inject NavigationManager NavigationManager

<style>
    .paper-button {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 16px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .paper-button:hover {
            transform: scale(1.05);
        }

        .paper-button:active {
            transform: scale(0.95);
        }
</style>

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor and the .NET 8 Template!</MudText>

<MudGrid>
    <MudItem>
        <MudPaper Outlined Class="paper-button"
                  @onclick="@(() => NavigationManager.NavigateTo("/designer"))">
            <MudIcon Class="mb-3" Size="Size.Large" Icon="@Icons.Material.Filled.DesignServices" />
            <MudText Typo="Typo.h5">Go to empty designer</MudText>
        </MudPaper>
    </MudItem>
    <MudItem>
        <MudPaper Outlined Class="paper-button"
                  @onclick="@(() => NavigationManager.NavigateTo("/precompiled-designer"))">
            <MudIcon Class="mb-3" Size="Size.Large" Icon="@Icons.Material.Filled.ViewModule" />
            <MudText Typo="Typo.h5">Go to precompiled designer</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>