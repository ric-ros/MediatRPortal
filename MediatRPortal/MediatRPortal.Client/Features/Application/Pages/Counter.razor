@page "/counter"
@using MudBlazor.State

<PageTitle>Counter with state</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter with state count: @_count</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="ClickFromParent">Click from parent</MudButton>

<MediatRPortal.Client.Features.Application.Components.Test.Counter @bind-InitialCount="_count" />

@code {
    private int _count = 5;

    private void ClickFromParent()
    {
        _count++;
    }

}
